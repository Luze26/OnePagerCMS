<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
          <% @sections.each do |section| %>
            <li><%= link_to section[:title], '#' %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="span9">
      <div class="hero-unit">
        <% @sections.each do |section| %>
          <h1><%= section[:title] %></h1>
          <p>
            <%= section[:content] %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>